{% extends 'base.html.twig' %}

{% block body %}
    <h1>Especialidad</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ especialidade.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ especialidade.nombre }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if especialidade.isActivo %}ACTIVO{% else %}INACTIVO{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('especialidades_index') }}">Regresar</a>
        </li>
        <li>
            <a href="{{ path('especialidades_edit', { 'id': especialidade.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
