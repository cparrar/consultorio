{% extends 'base.html.twig' %}

{% block body %}
    <h1>Historial</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historial.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ historial.descripcion }}</td>
            </tr>
            <tr>
                <th>Motivo</th>
                <td>{{ historial.motivo }}</td>
            </tr>
            <tr>
                <th>Fecha de Ingreso</th>
                <td>{% if historial.fechaAt %}{{ historial.fechaAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('historial_index') }}">Regresar</a>
        </li>
        <li>
            <a href="{{ path('historial_edit', { 'id': historial.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
